{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@michijs/shared-configs/tsconfig",
  "compilerOptions": {
    "allowUnusedLabels": true,
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@application/*": ["./src/application/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@shared/*": ["./src/shared/*"],
      "@ports/*": ["./src/ports/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
