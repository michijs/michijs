{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@michijs/tsconfig/tsconfig.json",
  "compilerOptions": {
    "allowUnusedLabels": true,
    "paths": {
      "@michijs/michijs/*": [
        "./src/*"
      ],
      "@michijs/michijs": [
        "./src/index"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude" : [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}