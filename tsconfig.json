{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@michijs/shared-configs/tsconfig",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./src",
    "allowUnusedLabels": true,
    "paths": {
      "@domain": ["./domain/index"],
      "@infrastructure": ["./src/infrastructure/index"],
      "@shared": ["./shared/index"],
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
